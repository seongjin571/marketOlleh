<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      input{
        width: 700px;
        height: 100px;
        font-size: 30px;
      }
      button{
        width: 500px;
        height: 70px;
        font-size: 30px;
      }
      </style>
  </head>
  <script type='application/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/fastclick/1.0.6/fastclick.js'></script>
  <script>
      window.addEventListener('load', function () {
          FastClick.attach(document.body);
      }, false);
  </script>
  <body>
    <h1>Login</h1>
    <div>
      <form action='/login' method='POST'>
        <input type='text' name='userid' placeholder='아이디' style='margin-bottom:30px;'/><br/>
        <input type='password' name='userpwd' placeholder='비밀번호' style='margin-bottom: 30px;'/><br/>
        <input type='submit' value='로그인' style='margin-bottom: 10px;'/><br/>
      </form>
      <div style='margin-bottom: 10px; margin-top: 10px;'><a href='/signup'><button>Sign Up</button></a></div>
      <div style='margin-bottom: 10px;'><a href='/login/kakao'><button>Kakao Login</button></a></div>
      <div style='margin-bottom: 10px;'><a href='/login/naver'><button>Naver Login</button></a></div>
    </div>
  </body>
</html>