<body>
    <div id="menu">
        <div id="go_my_coupon">내 쿠폰</div>
        <div id="go_coupon_view">쿠폰 보기</div>
    </div>


    <div id="coupon_view">
        <h2 id="good_market_list">
            내가 가는 시장들
        </h2>


      <% if(result2) { %>
        <% var count =0; %>
        <% for(var j=0; j<result2.length; j++) { %>
          <% for(var k=j ;k<result2.length; k++) { %>
            <% if(result2[j].sijang_name == result2[k].sijang_name) { %>
              <% count++; %>
              <% } %>
        <% } %>
        <% if(count == 1) { %>
          <div class="market" name="sijang_name">
              <p><%= result2[j].sijang_name %></p>
          </div>
        <% } %>
        <% count =0; %>
        <% } %>
       <% } else { %>
            <p>비어있음</p>
        <% } %>

        <h2 id="near_market_list">
            주변 시장들
        </h2>

        <div class="market">
