<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= market.market_name %> - <%= market.sijang_name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no">
    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/share.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- <script src="main.js"></script> -->
</head>

<body>
    <div class="menu">
        <div id="store_name_web"><%= market.market_name %></div>
        <div id="market_name_web"><%= market.sijang_name %></div>
        <table>
            <tr>
                <th class="menu_list" style="color: #63dded;border-left-color: #63dded;">상점 정보</th>
            </tr>
            <tr>
                <th class="menu_list">스탬프 정보</th>
            </tr>
            <tr>
                <th class="menu_list">리뷰</th>
            </tr>
        </table>
    </div>
    <div id="store_infor">
        <div id="logo_div">
            <img id="logo" src="/images/logo_with_text.png" style="padding-top:20px;">
        </div>
        <div id="menu_infor">
            <div id="top_infor">
                <div id="name_sj">
                    <p id="store_name_sj">
                        <%= market.market_name %>
                    </p>
                    <p id="market_name_sj">
                        <%= market.sijang_name %>
                    </p>
                </div>
                <div id="sns_sj">
                    <div id="good">
                        <img class='top_image' id="noGood_Button_sj" src="/images/nolikeM.png" width="30px" height="30px" style="padding-top:15px;">
                        <p class="top_font" id="goodCount_sj"><%= market.like_count %></p>
                    </div>
                </div>
            </div>

        </div>

        <div class="about_store">
            <div class="detail">
                <h3>상점 정보</h3>
                <div class="store_detail_sj">
                    <div class="store_image"></div>
                    <div id="introduce">
                        <img src="/images/storeM.png" width="30px" height="30px">
                        <div class="name">상점소개</div>
                        <div id="intro_content">
                          <%= market.market_introduce %>
                        </div>
                    </div>
                    <div id="map">
                        <img src="/images/location3.png" width="30px" height="30px">
                        <div class="name">위치</div>
                    </div>
                    <img src="/images/han.png" width="80%" style="margin-left: 10%;margin-top: 5%;">
                </div>
            </div>
            <div class="line"></div>
            <div class="detail">
                    <h3>스탬프 정보</h3>
                    <div id="stamp_menu_sj">
                        <div class="stamp_sj">

                          <% if(market.stamp_standard == 10) { %>
                            <div class="tenControls_sj">
                                <div class="tenStamp_sj">

                                    <div class="tenStamp_top_sj">
                                        <div class="ten_sj">
                                            <p>1</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>2</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>3</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>4</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>5</p>
                                        </div>
                                    </div>

                                    <div class="tenStamp_bottom_sj">
                                        <div class="ten_sj">
                                            <p>6</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>7</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>8</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>9</p>
                                        </div>
                                        <div class="ten_sj">
                                            <p>10</p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <script>
                              document.getElementsByClassName('tenControls_sj')[0].style.display = 'block';
                            </script>
                          <% } else { %>


                              <div class="fiveControls_sj">
                                  <div class="fiveStamp_sj">
                                      <div class="five_sj">
                                          <p>1</p>
                                      </div>
                                      <div class="five_sj">
                                          <p>2</p>
                                      </div>
                                      <div class="five_sj">
                                          <p>3</p>
                                      </div>
                                      <div class="five_sj">
                                          <p>4</p>
                                      </div>
                                      <div class="five_sj">
                                          <p>5</p>
                                      </div>
                                  </div>
                              </div>
                              <script>
                                document.getElementsByClassName('fiveControls_sj')[0].style.display = 'block';
                              </script>
                            <% } %>
                        </div>

                        <div class="stamp_infor">
                            <img src="/images/standard.png" width="30px" height="30px">
                            <div class="name">적립기준</div>
                            <div class="stamp_infor_content">
                                <%= market.market_promotion %>
                            </div>
                        </div>

                        <div class="stamp_infor">
                            <img src="/images/rewardM.png" width="30px" height="30px">
                            <div class="name">보상기준</div>
                            <div class="stamp_infor_content">
                                <%= market.stamp_reward %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="line"></div>


            <div class="detail" id="review_id">
                <h3>리뷰</h3>
                <div class="store_review_sj">


                  <div class='store_review_sj' id="store_review_sj">
                    <div class="review_rate">
                      <div class="review_star">
                        <% if(reviews.length) { %>
                          <% for(var i=0; i<avg.avgRate; i++) { %>
                              <div>
                                <img class="star_yellow" src="/images/star_yellow.png" width="30px" height="30px">
                              </div>
                          <% } %>

                          <% for(var i=0; i<5-avg.avgRate; i++) { %>
                            <div>
                              <img class="star_gray" src="/images/star_gray.png" width="30px" height="30px">
                            </div>
                          <% } %>
                        <% } else { %>
                          <% for(var i=0; i<5; i++) { %>
                            <div>
                              <img class="star_gray" src="/images/star_gray.png" width="30px" height="30px">
                            </div>
                          <% } %>
                        <% } %>
                      </div>
                      <div class="review_count">

                        <!-- <p style="font-size: 20px; color: #9c9c9c;">리뷰</p> -->

                              <p class="review_count_content" id='review_count_content'></p>
                              <% if(reviews.length) { %>
                                <p style="font-size: 20px; color: #9c9c9c;"><%= reviews.length %>개의 리뷰가 있습니다.</p>
                              <% } else { %>
                                <p style="font-size: 20px; color: #9c9c9c;">작성된 리뷰가 없습니다.</p>
                              <% } %>


                      </div>

                      <div id="intro">
                        <p>
                            <%= market.market_name %>을(를) 이용하는 고객들의 리뷰입니다.
                        </p>
                      </div>
                      <div class="line_review">

                      </div>

                    </div>
                </div>
            </div>

            <% if(reviews.length) { %>
              <% for(var i=0; i<reviews.length; i++) { %>
                <div class="review_div_sj" id='review_div_sj'>
                    <div class="review_star_customer">
                      <% if(reviews[i].user_id != '사장님') { %>
                        <% for(var j=0; j<reviews[i].rate; j++) { %>
                            <div>
                              <img class="star_yellow" src="/images/star_yellow.png" width="30px" height="30px">
                            </div>
                        <% } %>

                        <% for(var j=0; j<5-reviews[i].rate; j++) { %>
                          <div>
                            <img class="star_gray" src="/images/star_gray.png" width="30px" height="30px">
                          </div>
                        <% } %>
                      <% } else { %>
                        <div>
                            <img class="star_gray_customer" src="/images/logo_with_text_small.png" width="60px" height="15px">
                        </div>
                      <% } %>
                    </div>
                  <div class="review_content_sj">
                    <div class="review_content_id_sj" id='review_content_id_sj<%= reviews[i].id %>'>
                      <% if(reviews[i].provider == 'kakao') { %>
                        <%= reviews[i].username %>
                      <% } else { %>
                        <script>
                        var temp = '<%= reviews[i].user_id %>';
                        var secret = '***';
                        var l = temp.length;
                        var f = l-3;
                        var temp2 = temp.substring(0,f);
                        var result3 = temp2.concat(secret);

                        if(result3 == '***'){
                          $('#review_content_id_sj<%= reviews[i].id %>').html('사장님');
                        }else{
                          $('#review_content_id_sj<%= reviews[i].id %>').html(result3);
                          console.log(result3);
                        }
                         console.log("아래");
                         console.log(result3);
                        </script>
                      <% } %>

                    </div>
                    <div class="review_content_date_sj">
                        <%= reviews[i].date %>
                    </div>
                  </div>
                  <p><%= reviews[i].review %></p>
                  <div class="line_review">

                    </div>
                </div>
              <% } %>
            <% } %>

        </div>
    </div>
</body>
<script>
    $('.store_image').css({ "background": "url(/images/market3.jpg)", 'background-repeat': 'no-repeat', 'background-position': 'center center' });
    $('tr').click(function () {
        var index = $(this).index();
        $('.menu_list').css('border-left-color', '#9c9c9c').css('color', '#9c9c9c');
        $('.menu_list').eq(index).css('border-left-color', '#63dded').css('color', '#63dded');
        $('.detail').css('display','none');
        $('.detail').eq(index).css('display','block');


    })
</script>

</html>
